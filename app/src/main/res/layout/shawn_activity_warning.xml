<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <include
        android:id="@+id/reTitle"
        layout="@layout/shawn_layout_title"/>

    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reTitle"/>

    <RelativeLayout
        android:id="@+id/reShare"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reTitle">

        <ImageView
            android:id="@+id/ivList"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/reWarningStatistic"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_list"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ivStatistic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ivList"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_history"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ivRefresh"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/ivLocation"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/shawn_icon_warning_refresh"/>

        <ImageView
            android:id="@+id/ivLocation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/shawn_icon_warning_location"/>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/reWarningStatistic"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_fog_close"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/shawn_icon_warning_rain_close"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/shawn_icon_warning_sand_close"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv3"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/shawn_icon_warning_snow_close"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv4"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/shawn_icon_warning_temp_close"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv5"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/shawn_icon_warning_wind_close"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv7"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/shawn_icon_warning_hanchao_close"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv9"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv8"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/shawn_icon_warning_sea_close"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv10"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv9"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/shawn_icon_warning_qiangduiliu_close"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv10"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/shawn_icon_warning_typhoon_close"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/llLegend"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="55dp"
            android:layout_toStartOf="@+id/ivRefresh"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLegend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_icon_warning_legend_fog"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivLegend2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_rain"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivLegend3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_sand"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivLegend4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_snow"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivLegend5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_temp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivLegend7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_icon_warning_legend_hanchao"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivLegend8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_icon_warning_legend_hanchao"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivLegend9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_wind"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivLegend10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_qiangduiliu"
                android:visibility="gone"/>

        </LinearLayout>

        <com.china.view.ArcMenu
            xmlns:zhy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/arcMenu"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:visibility="gone"
            zhy:position="left_bottom"
            zhy:radius="90dp">

            <ImageView
                android:id="@+id/id_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/shawn_icon_arc_main"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shawn_icon_arc_blue"
                android:tag="blue"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shawn_icon_arc_yellow"
                android:tag="yellow"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shawn_icon_arc_orange"
                android:tag="orange"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shawn_icon_arc_red"
                android:tag="red"
                android:visibility="gone"/>
        </com.china.view.ArcMenu>

        <RelativeLayout
            android:id="@+id/reWarningStatistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvWarningStatistic"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/tvNation"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shawn_bg_nation_warning"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/level_5"
                android:visibility="gone"/>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/tvWarningStatistic"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:cacheColorHint="@color/transparent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@color/transparent"
                android:overScrollMode="never"
                android:scrollbars="none"/>

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_below="@+id/listView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:src="@drawable/shawn_icon_arrow_down_black"/>
        </RelativeLayout>

    </RelativeLayout>

    <com.wang.avi.AVLoadingIndicatorView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:indicator="LineScalePulseOutRapid"
        app:indicator_color="@color/blue"/>

    <ImageView
        android:id="@+id/ivGuide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shawn_bg_warning_guide"/>

</RelativeLayout>