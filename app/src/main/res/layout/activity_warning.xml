<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/reTitle"
        layout="@layout/layout_title" />

    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reTitle" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clShare"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reTitle">

        <ImageView
            android:id="@+id/ivList"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/shawn_icon_warning_list"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reWarningStatistic" />

        <ImageView
            android:id="@+id/ivStatistic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/shawn_icon_warning_history"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivList" />

        <ImageView
            android:id="@+id/ivNews"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/shawn_icon_warning_news"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivStatistic" />

        <ImageView
            android:id="@+id/ivRefresh"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/shawn_icon_warning_refresh"
            app:layout_constraintBottom_toTopOf="@+id/ivLocation"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivLocation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/shawn_icon_warning_location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reWarningStatistic">

            <TextView
                android:id="@+id/tvName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivIntrol"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_warning_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reWarningStatistic" />

        <ImageView
            android:id="@+id/ivCentral"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/shawn_icon_warning_zhongyang"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivIntrol" />

        <TextView
            android:id="@+id/tvCentrolCount"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/level_6"
            android:translationX="7.5dp"
            android:translationY="-7.5dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/ivCentral"
            app:layout_constraintTop_toBottomOf="@+id/ivIntrol" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_fog_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCentral" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_rain_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv1" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_sand_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv2" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_snow_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv3" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_temp_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv4" />

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_wind_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv5" />

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_hanchao_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv7" />

        <ImageView
            android:id="@+id/iv9"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_sea_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv8" />

        <ImageView
            android:id="@+id/iv10"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_qiangduiliu_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv9" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shawn_icon_warning_typhoon_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv10" />

        <LinearLayout
            android:id="@+id/llLegend"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivRefresh">

            <ImageView
                android:id="@+id/ivLegend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_icon_warning_legend_fog"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivLegend2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_rain"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivLegend3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_sand"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivLegend4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_snow"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivLegend5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_temp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivLegend7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_icon_warning_legend_hanchao"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivLegend8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_icon_warning_legend_hanchao"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivLegend9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_wind"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivLegend10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/shawn_warning_legend_qiangduiliu"
                android:visibility="gone" />

        </LinearLayout>

        <com.china.view.ArcMenu xmlns:zhy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/arcMenu"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            zhy:layout_constraintBottom_toBottomOf="parent"
            zhy:layout_constraintStart_toStartOf="parent"
            zhy:position="left_bottom"
            zhy:radius="90dp">

            <ImageView
                android:id="@+id/id_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/shawn_icon_arc_main" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shawn_icon_arc_blue"
                android:tag="blue"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shawn_icon_arc_yellow"
                android:tag="yellow"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shawn_icon_arc_orange"
                android:tag="orange"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shawn_icon_arc_red"
                android:tag="red"
                android:visibility="gone" />
        </com.china.view.ArcMenu>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/reWarningStatistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvWarningStatistic"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNation"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@drawable/shawn_bg_nation_warning"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/level_5"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="2dp"
                android:cacheColorHint="@color/transparent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@color/transparent"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@+id/tvWarningStatistic" />

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/shawn_icon_arrow_down_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/listView" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/ivGuide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_warning_guide"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>