<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/reTitle"
        layout="@layout/layout_title2" />

    <com.china.view.RefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/reBottom"
        android:layout_below="@+id/reTitle"
        android:background="@color/white"
        android:orientation="vertical" >

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </com.china.view.RefreshLayout>
    
    <RelativeLayout 
        android:visibility="gone"
        android:id="@+id/reBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#30000000"
        android:gravity="center_vertical">
        
        <ImageView 
            android:id="@+id/ivText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/iv_url_text"
            android:layout_centerVertical="true"/>
        
        <ImageView 
            android:id="@+id/ivCollect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/iv_url_collect"
            android:layout_centerInParent="true"/>
        
        <ImageView 
            android:id="@+id/ivShareImg"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="10dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/iv_url_share"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>